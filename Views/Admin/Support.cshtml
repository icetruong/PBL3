@using Microsoft.EntityFrameworkCore.Metadata.Internal
@{
    ViewData["Title"] = "Home Page";
}

@model HoldEvent.Models.FeedbackSupportViewModel

<div class="text-center">
    <h1 class="display-4" asp-for="Title"></h1>
</div>

<form method="post" class="p-4 border rounded shadow-sm" style="background-color: #fdfdfd;">
    <div class="mb-3">
        <input type="hidden" class="form-control" asp-for="UserId" readonly />
        <input type="hidden" class="form-control" asp-for="FeedbackId" readonly />
        <input type="hidden" class="form-control" asp-for="AdminId" readonly />
        <input type="hidden" class="form-control" asp-for="SupportId" readonly />
    </div>

    <div class="mb-3">
        <label class="form-label fw-semibold">Content Feedback</label>
        <textarea class="form-control" rows="5" asp-for="ContentFeedback" readonly></textarea>
    </div>

    <div class="mb-3">
        <label class="form-label fw-semibold">Day Feedback</label>
        <input type="datetime-local" class="form-control" asp-for="CreateAtDayFeedback" readonly />
    </div>

    <div class="mb-3">
        <label class="form-label fw-semibold">Content Support</label>
        <textarea class="form-control" rows="5" asp-for="ContentSupport" placeholder="Nhập nội dung phản hồi"></textarea>
        <span asp-validation-for="ContentSupport" class="text-danger small"></span>
    </div>

    <div class="mb-3">
        <input type="hidden" class="form-control" asp-for="CreateAtDaySupport" readonly />
    </div>

    <div class="d-flex gap-2">
        <button class="btn btn-success" type="submit">OK</button>
        <button class="btn btn-secondary" type="submit" formmethod="get" asp-area="" asp-controller="Admin" asp-action="ListSupport">Cancel</button>
    </div>
</form>



