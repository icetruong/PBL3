@{
    ViewData["Title"] = "Home Page";
}

@model List<HoldEvent.Models.Entities.Commission>

<div class="text-center">
    <h1 class="display-4">Commission</h1>
</div>

<div class="row">
    @foreach(var c in Model)
    {
        <div class="text-center col-md-6">
            <div class="mt-3">
            </div>
            <div class="mt-3">
                @if(c.CommissionType == 1)
                {
                    <h2 class="display-6">Ticket Commission</h2>
                }
                else
                {
                    <h2 class="display-6">Venue Commission</h2>
                }
                    
            </div>
            <div class="mt-3">
                <div>Percentage:</div>
                <p>@c.Percentage %</p>
            </div>
            <div class="mt-3">
                <div>Day Create: </div>
                <p>@c.CreateAtDay?.ToString("dd/MM/yyyy")</p>
            </div>
            <div class="mt-3">
                <a class=" btn btn-danger" type="" asp-area="" asp-controller="Admin" asp-action="EditCommission" asp-route-Type="@c.CommissionType">Edit</a>
            </div>
        </div>
    }
</div>