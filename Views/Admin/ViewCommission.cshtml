@model List<HoldEvent.Models.Entities.Commission>

<div class="text-center mb-4">
    <h1 class="display-4 fw-bold">Commission</h1>
</div>

<div class="container">
    <div class="d-flex justify-content-center gap-4 flex-wrap">
        @foreach (var c in Model)
        {
            <div class="border rounded-3 shadow-sm bg-light text-center p-3" style="width: 50%; max-width: 400px;">
                <div class="mb-4">
                    @if (c.CommissionType == 1)
                    {
                        <h2 class="h5 text-primary fw-semibold">Ticket Commission</h2>
                    }
                    else
                    {
                        <h2 class="h5 text-primary fw-semibold">Venue Commission</h2>
                    }
                </div>

                <div class="mb-3">
                    <div class="text-muted">Percentage:</div>
                    <p class="fs-5 fw-medium">@c.Percentage %</p>
                </div>

                <div class="mb-3">
                    <div class="text-muted">Day Created:</div>
                    <p class="fs-6">@c.CreateAtDay?.ToString("dd/MM/yyyy")</p>
                </div>

                <div class="mt-4">
                    <a class="btn btn-danger px-4"
                       asp-controller="Admin"
                       asp-action="EditCommission"
                       asp-route-Type="@c.CommissionType">
                        Edit
                    </a>
                </div>
            </div>
        }
    </div>
</div>
