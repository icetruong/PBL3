@using Microsoft.EntityFrameworkCore.Metadata.Internal
@{
    ViewData["Title"] = "Home Page";
}

@model HoldEvent.Models.Entities.User

<div class="text-center">
    <h1 class="display-4">Thông tin của @Model.FullName</h1>
</div>

<form method="post">
    <div class="mt-3">
        <input type="hidden" class="form-control" placeholder="" asp-for="UserId" readonly />
    </div>
    <div class="mt-3">
        <label class="form-label"> Full Name</label>
        <input type="text" class="form-control" placeholder="" asp-for="FullName" readonly />
    </div>

    <div class="mt-3">
        <label class="form-label">Email</label>
        <input type="text" class="form-control" placeholder="" asp-for="Email" readonly />
    </div>

    <div class="mt-3">
        <label class="form-label"> PhoneNumber</label>
        <input type="text" class="form-control" placeholder="" asp-for="PhoneNumber" readonly />
    </div>

    <div class="mt-3">
        <label class="form-label"> Address</label>
        <input type="text" class="form-control" placeholder="" asp-for="Address" readonly />
    </div>

    <div class="mt-3">
        <label class="form-label"> DayOfBirth</label>
        <input type="datetime-local" class="form-control" placeholder="" asp-for="DayOfBirth" readonly />
    </div>

    <div class="mt-3">
        <label class="form-label"> Gender </label>
        <input type="radio" asp-for="Gender" value="true" readonly />
        <label class=""> Nam </label>
        <input type="radio" asp-for="Gender" value="false" readonly />
        <label class=""> Nữ </label>
    </div>
    <div class="mt-3">
        <label class="form-label"> Role</label>
        <select class="form-control" asp-for="Role">
            <option value="User">User</option>
            <option value="Organizer">Organizer</option>
            <option value="OwnPlace">OwnPlace</option>
        </select>
    </div>
    

    <div class="mt-3">
        <button class=" btn btn-primary" type="submit">OK</button>
    </div>



</form>
