@using Microsoft.EntityFrameworkCore.Metadata.Internal
@{
    ViewData["Title"] = "Home Page";
}

@model HoldEvent.Models.Entities.User

<div class="text-center">
    <h1 class="display-4" style="font-weight:700">Thông tin của @Model.FullName</h1>
</div>

<form method="post" class="p-4 border rounded-4" style="min-width: 600px; margin: auto; border-color: #ccc;">
    <div class="mb-3">
        <input type="hidden" class="form-control" asp-for="UserId" readonly />
    </div>

    <div class="mb-3">
        <label class="form-label fw-semibold">Full Name</label>
        <input type="text" class="form-control" asp-for="FullName" readonly />
    </div>

    <div class="mb-3">
        <label class="form-label fw-semibold">Email</label>
        <input type="text" class="form-control" asp-for="Email" readonly />
    </div>

    <div class="mb-3">
        <label class="form-label fw-semibold">Phone Number</label>
        <input type="text" class="form-control" asp-for="PhoneNumber" readonly />
    </div>

    <div class="mb-3">
        <label class="form-label fw-semibold">Address</label>
        <input type="text" class="form-control" asp-for="Address" readonly />
    </div>

    <div class="mb-3">
        <label class="form-label fw-semibold">Day Of Birth</label>
        <input type="datetime-local" class="form-control" asp-for="DayOfBirth" readonly />
    </div>

    <div class="mb-3">
        <label class="form-label fw-semibold d-block">Gender</label>
        <div class="form-check form-check-inline">
            <input type="radio" class="form-check-input" asp-for="Gender" value="true" readonly />
            <label class="form-check-label">Nam</label>
        </div>
        <div class="form-check form-check-inline">
            <input type="radio" class="form-check-input" asp-for="Gender" value="false" readonly />
            <label class="form-check-label">Nữ</label>
        </div>
    </div>

    <div class="mb-4">
        <label class="form-label fw-semibold">Role</label>
        <select class="form-control" asp-for="Role">
            <option value="User">User</option>
            <option value="Organizer">Organizer</option>
            <option value="OwnPlace">OwnPlace</option>
        </select>
    </div>

    <div class="d-flex justify-content-end">
        <button class="btn btn-primary px-4" type="submit">OK</button>
    </div>
</form>

