@{
    ViewData["Title"] = "Home Page";
}

@model List<HoldEvent.Models.Entities.Event>

<div class="text-center">
    <h1 class="display-4" style="font-weight:700">Event</h1>
</div>


<div class="container">
    <div class="row g-4">
        @foreach (var c in Model)
        {
            <div class="col-12 col-md-6 col-lg-3">
                <div class="bg-light border rounded-3 shadow-sm p-4 h-100 d-flex flex-column justify-content-between">

                    <div class="text-center mb-3">
                        <h2 class="h5 text-primary fw-semibold">@c.Name</h2>
                    </div>

                    <div class="mb-3 text-muted">
                        <p>@c.Description</p>
                    </div>

                    <div class="mb-2">
                        <strong>Start Time:</strong>
                        <div>@(c.StartTime?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")</div>
                    </div>

                    <div class="mb-2">
                        <strong>End Time:</strong>
                        <div>@(c.EndTime?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")</div>
                    </div>

                    <div class="mb-3">
                        <strong>Is Public:</strong>
                        <div>@(c.IsPublic == true ? "Yes" : "No")</div>
                    </div>

                    <div class="mt-3 text-center">
                        <a class="btn btn-primary w-100" asp-area="" asp-controller="Admin" asp-action="InspectDetailEvent" asp-route-EventID="@c.EventId">
                            Inspect Event
                        </a>
                        <span asp-validation-for="@c.Name" class="text-danger small"></span>
                    </div>

                </div>
            </div>
        }
    </div>
</div>
