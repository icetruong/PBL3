@{
    ViewData["Title"] = "Home Page";
}

@model List<HoldEvent.Models.Entities.Event>

<div class="text-center">
    <h1 class="display-4" style="font-weight:700">Event</h1>
</div>


<div class="container">
    <div class="row g-4">
        @foreach (var c in Model)
        {
            <div class="col-12 col-md-6 col-lg-4 mb-4">
                <div class="position-relative rounded overflow-hidden shadow-sm h-100 text-white"
                     style='background: url("data:image/png;base64,@(Convert.ToBase64String(c.Image))") center/cover no-repeat;'>

                    <div style="position:absolute; inset:0; background-color:rgba(0,0,0,0.4); z-index:0;"></div>

                    <div class="position-relative p-3 d-flex flex-column h-100" style="z-index:1;">
                        <div class="text-center mb-2">
                            <h2 class="h5 fw-semibold text-white">@c.Name</h2>
                        </div>

                        <div class="mb-2">
                            <strong>Start Time:</strong>
                            <div>@(c.StartTime?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")</div>
                        </div>

                        <div class="mb-2">
                            <strong>End Time:</strong>
                            <div>@(c.EndTime?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")</div>
                        </div>

                        <div class="mb-3">
                            <strong>Is Public:</strong>
                            <div>@(c.IsPublic == true ? "Yes" : "No")</div>
                        </div>

                        <div class="mt-auto text-center">
                            <a class="btn btn-primary w-100 fw-bold" asp-controller="Admin" asp-action="InspectDetailEvent" asp-route-EventID="@c.EventId">
                                Inspect Event
                            </a>
                            <span asp-validation-for="@c.Name" class="text-danger small"></span>
                        </div>
                    </div>
                </div>
            </div>

        }
    </div>
</div>
