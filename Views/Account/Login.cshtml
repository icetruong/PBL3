@{
    ViewData["Title"] = "Home Page";
}

@model HoldEvent.Models.LoginViewModel

<div class="text-center">
    <h1 class="display-4">Sign in</h1>
</div>

<form method="post">
     <div class="mt-3">
         <label class="form-label"> User Name</label>
         <input type ="text" class="form-control" placeholder="User Name" asp-for="UserName"/>

        <span asp-validation-for="UserName" class="text-danger"></span>
     </div>

    <div class="mt-3">
        <label class="form-label"> Password</label>
        <input type="password" class="form-control" placeholder="Password" asp-for = "Password"/>

        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <a asp-action="Register" asp-controller="Account">Sign up</a>
        <a asp-action="ForgetPassword" asp-controller="Account" class="ms-4">Forget Password</a>
    </div>
    @Html.ValidationSummary(true)
    <div class="mt-3">
        <button class=" btn btn-primary" type="submit">Login</button>

        <button class=" btn btn-danger" asp-area="" asp-controller="Home" asp-action="Index">Cancel</button>
    </div>
</form>
