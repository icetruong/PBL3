@{
    ViewData["Title"] = "Home Page";
}

@model HoldEvent.Models.LoginViewModel

<div class="container flex-fill d-flex justify-content-center align-items-center">
    <div class="card shadow p-4 rounded-4" style="width: 100%; max-width: 400px;">
        <div class="text-center mb-4">
            <h1 class="h3 fw-bold text-primary">Sign In</h1>
        </div>

        <form method="post">
            <div class="mb-3">
                <label class="form-label">User Name</label>
                <input type="text" class="form-control" placeholder="Enter your username" asp-for="UserName" />
                <span asp-validation-for="UserName" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Password</label>
                <input type="password" class="form-control" placeholder="Enter your password" asp-for="Password" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-between mb-3">
                <a asp-action="Register" asp-controller="Account">Sign up</a>
                <a asp-action="ForgetPassword" asp-controller="Account">Forgot Password?</a>
            </div>

            @Html.ValidationSummary(true)

            <div class="d-grid gap-2">
                <button class="btn btn-primary" type="submit">Login</button>
                <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">Cancel</a>
            </div>
        </form>
    </div>
</div>
