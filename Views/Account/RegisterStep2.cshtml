@using Microsoft.EntityFrameworkCore.Metadata.Internal
@{
    ViewData["Title"] = "Home Page";
}

@model HoldEvent.Models.RegisterViewModel

<div class="text-center">
    <h1 class="display-4">Sign up</h1>
</div>

<form method="post">
    <input type="text" class="form-control" placeholder="User Name" asp-for="UserName" hidden/>
    <input type="password" class="form-control" placeholder="Password" asp-for="Password" hidden/>
    <input type="password" class="form-control" placeholder="Confirm Password" asp-for="ConfirmPassword" hidden/>
    <div class="mt-3">
        <label class="form-label"> Full Name</label>
        <input type="text" class="form-control" placeholder="" asp-for="FullName" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label class="form-label">Email</label>
        <input type="text" class="form-control" placeholder="" asp-for="Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label class="form-label"> PhoneNumber</label>
        <input type="text" class="form-control" placeholder="" asp-for="PhoneNumber" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label class="form-label"> Address</label>
        <input type="text" class="form-control" placeholder="" asp-for="Address" />
    </div>

    <div class="mt-3">
        <label class="form-label"> DayOfBirth</label>
        <input type="date" class="form-control" placeholder="" asp-for="DayOfBirth" />
    </div>

    <div class="mt-3">
        <label class="form-label"> Gender </label>
        <input type="radio" asp-for="Gender" value="true" />
        <label class=""> Nam </label>
        <input type="radio" asp-for="Gender" value="false" />
        <label class=""> Nữ </label>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-success">OK</button>
        <button class=" btn btn-danger" type="" formmethod="get" asp-area="" asp-controller="Account" asp-action="RegisterStep1">Turn back</button>
    </div>


</form>
