@using Microsoft.EntityFrameworkCore.Metadata.Internal
@{
    ViewData["Title"] = "Home Page";
}

@model HoldEvent.Models.RegisterViewModel

<div class="text-center">
    <h1 class="display-4">Sign up</h1>
</div>

<form method="post">

    <div class="mt-3">
        <label class="form-label"> User Name</label>
        <input type="text" class="form-control" placeholder="User Name" asp-for="UserName" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label class="form-label"> Password</label>
        <input type="password" class="form-control" placeholder="Password" asp-for="Password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label class="form-label"> Confirm password</label>
        <input type="password" class="form-control" placeholder="Confirm Password" asp-for="ConfirmPassword" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="mt-3">
        <button class=" btn btn-primary" type="submit">Next</button>

        <button class=" btn btn-danger" type="" formmethod="get" asp-area="" asp-controller="Account" asp-action="Login">Cancel</button>
    </div>


</form>
