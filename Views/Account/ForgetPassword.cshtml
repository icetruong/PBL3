@using Microsoft.EntityFrameworkCore.Metadata.Internal
@{
    ViewData["Title"] = "Home Page";
}

@model HoldEvent.Models.RegisterViewModel

<div class="text-center">
    <h1 class="display-4">Forget Password</h1>
</div>

<form method="post">

    <div class="mt-3">
        <label class="form-label">Email</label>
        <input type="text" class="form-control" placeholder="" asp-for="Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label class="form-label"> PhoneNumber</label>
        <input type="text" class="form-control" placeholder="" asp-for="PhoneNumber" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label class="form-label"> Email</label>
        <input type="text" class="form-control" placeholder="" asp-for="Email" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label class="form-label"> User Name</label>
        <input type="text" class="form-control" placeholder="User Name" asp-for="UserName" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>


    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="mt-3">
        <button class=" btn btn-primary" type="submit">OK</button>

        <button class=" btn btn-danger" type="" formmethod="get" asp-area="" asp-controller="Account" asp-action="Login">Cancel</button>
    </div>


</form>
