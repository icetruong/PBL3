@using Microsoft.EntityFrameworkCore.Metadata.Internal
@{
    ViewData["Title"] = "Home Page";
}

@model HoldEvent.Models.Entities.Booking

<div class="text-center">
    <h1 class="display-4" style="font-weight:700">Inspect Booking</h1>
</div>

<form method="post" class="card p-4 mx-auto" style="max-width: 480px; box-shadow: 0 0 12px rgba(0,0,0,0.1); border-radius: 8px; background:#fff;">
    <input type="hidden" asp-for="BookingId" />

    <div class="mb-3">
        <label asp-for="DateStart" class="form-label">Day - Time Start</label>
        <input type="datetime-local" class="form-control" asp-for="DateStart" readonly />
        <span asp-validation-for="DateStart" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DateEnd" class="form-label">Day - Time End</label>
        <input type="datetime-local" class="form-control" asp-for="DateEnd" readonly />
        <span asp-validation-for="DateEnd" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="BookingDate" class="form-label">Day - Time Booking</label>
        <input type="datetime-local" class="form-control" asp-for="BookingDate" readonly />
        <span asp-validation-for="BookingDate" class="text-danger"></span>
    </div>

    <div class="mb-4">
        <label asp-for="Deposit" class="form-label">Total Price $</label>
        <input type="number" class="form-control" asp-for="Deposit" readonly />
        <span asp-validation-for="Deposit" class="text-danger"></span>
    </div>

    <div class="d-flex justify-content-between gap-2">
        <button type="submit" name="BookingStatus" value="Approved" class="btn btn-success flex-fill">Approve</button>
        <button type="submit" name="BookingStatus" value="Rejected" class="btn btn-warning flex-fill">Reject</button>
        <button type="button" class="btn btn-danger flex-fill" onclick="location.href='@Url.Action("ListBooking", "OwnPlace")'">Cancel</button>
    </div>
</form>

