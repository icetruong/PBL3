@using Microsoft.EntityFrameworkCore.Metadata.Internal
@{
    ViewData["Title"] = "Home Page";
}

@model HoldEvent.Models.Entities.Venue

<div class="text-center">
    @if (@String.IsNullOrEmpty(Model.OwnPlaceId))
    {
        <h1 class="display-4" style="font-weight:700">Create Venue</h1>
    }
    else
    {
        <h1 class="display-4" style="font-weight:700">Edit Venue</h1>
    }

</div>

<form method="post" class="card p-4 mx-auto" style="min-width: 1000px; box-shadow: 0 0 15px rgba(0,0,0,0.1); border-radius: 10px; background: #fff;">
    <input type="hidden" asp-for="VenueId" />
    <input type="hidden" asp-for="OwnPlaceId" />
    <input type="hidden" asp-for="CommissionId" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" placeholder="Enter name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label">Description</label>
        <textarea class="form-control" rows="5" asp-for="Description" placeholder="Nhập nội dung chi tiết"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Capacity" class="form-label">Capacity</label>
        <input type="number" class="form-control" asp-for="Capacity" placeholder="Enter capacity" />
        <span asp-validation-for="Capacity" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Address" class="form-label">Address</label>
        <input type="text" class="form-control" asp-for="Address" placeholder="Enter address" />
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label">Price/day $</label>
        <input type="number" step="0.01" class="form-control" asp-for="Price" placeholder="Enter price" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="d-flex justify-content-between mt-4">
        <button type="submit" class="btn btn-primary px-4">OK</button>
        <button type="button" class="btn btn-danger px-4" onclick="location.href='@Url.Action("ListVenue", "OwnPlace", new { area = "" })'">Cancel</button>
    </div>
</form>

