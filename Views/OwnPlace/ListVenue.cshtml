@{
    ViewData["Title"] = "Home Page";
}

@model List<HoldEvent.Models.Entities.Venue>


<div class="text-center">
    <h1 class="display-4" style="font-weight:700">Venue</h1>
</div>

<div class="d-flex justify-content-center align-items-center mt-2">
    <a class="btn btn-primary me-2" asp-area="" asp-controller="OwnPlace" asp-action="CreateEditVenue">Create Venue</a>
    <form method="get" asp-action="ListVenue" class="d-flex justify-content-center align-items-center">

        <div class="me-2">
            <input type="text" name="searchName" class="form-control" placeholder="tìm kiếm theo tên" value="@ViewData["Search"]" />
        </div>
        <button type="submit" class="btn btn-primary">Search</button>
    </form>
</div>


<div class="row" style="margin-top:30px">
    @foreach (var c in Model)
    {
        <div class="col-sm-12 col-md-6 col-lg-3 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title text-center mb-3">@c.Name</h5>
                    <p class="card-text flex-grow-1">@c.Description</p>
                    <p class="mb-1"><strong>Capacity:</strong> @c.Capacity</p>
                    <p class="mb-1"><strong>Address:</strong> @c.Address</p>
                    <p class="mb-3"><strong>Price:</strong> $@c.Price</p>

                    <div class="mt-auto d-flex">
                        <a class="btn btn-primary btn-sm me-2" asp-area="" asp-controller="OwnPlace" asp-action="CreateEditVenue" asp-route-VenueID="@c.VenueId">Edit</a>
                        <a class="btn btn-danger btn-sm" asp-area="" asp-controller="OwnPlace" asp-action="DeleteVenue" asp-route-VenueID="@c.VenueId">Delete</a>
                    </div>
                    <span asp-validation-for="@c.Name" class="text-danger mt-2"></span>
                </div>
            </div>
        </div>
    }
</div>
