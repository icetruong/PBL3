@{
    ViewData["Title"] = "Home Page";
}

 @model List<HoldEvent.Models.ListTicketViewModel>

<div class="row">
    <div class="col-md-6">
        <a class="btn btn-primary" asp-area="" asp-controller="Organizer" asp-action="CreateEditTicket">Create Ticket</a>
    </div>
    <div class="col-md-6">
        <form method="get" asp-controller="Organizer" asp-action="ListTicket" class="d-flex">
            <div class="mt-3 me-3">
                <input type="text" name="searchName" class="form-control" placeholder="tìm kiếm theo tên" value="@ViewData["Search"]" />
            </div>
            <button type="submit" class="btn btn-primary">Search</button>
        </form>
    </div>
</div>



<div class="text-center">
    <h1 class="display-4">List Ticket</h1>
    <br />
    <table class="table">
        <thead>
            <tr>
                <th>
                    EventName
                </th>
                <th>
                    Type Ticket
                </th>
                <th>
                    Price
                </th>
                <th>
                    Total Quantity
                </th>
                <th>
                    Sold Quantity
                </th>
                <th>
                    
                </th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var f in Model)
                {
                    <tr>
                        <td>
                            @f.Name
                        </td>
                        <td>
                            @f.TicketType
                        </td>
                        <td>
                            @f.Price
                        </td>
                        <td>
                            @f.TotalQuantity
                        </td>
                        <td>
                            @f.SoldQuantity
                        </td>
                        <td>
                            <a class="btn btn-primary" asp-area="" asp-controller="Organizer" asp-action="CreateEditTicket" asp-route-TicketID="@f.TicketId">Edit</a>
                            <a class="btn btn-danger" asp-area="" asp-controller="Organizer" asp-action="DeleteTicket" asp-route-TicketID="@f.TicketId">Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>

    </table>
</div>



