@using Microsoft.EntityFrameworkCore.Metadata.Internal
@{
    ViewData["Title"] = "Home Page";
}

@model HoldEvent.Models.VenueBookingViewModel

<div class="text-center">
    <h1 class="display-4">Booking Venue</h1>
</div>

<form method="post">
    <div class="mt-3">
        <input type="hidden" class="form-control" placeholder="" asp-for="VenueId" />
    </div>
    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" placeholder="" asp-for="Name" readonly/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label class="form-label">Decription</label>
        <textarea class="form-control" rows="5" placeholder="" asp-for="Description" readonly></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label class="form-label"> Capacity</label>
        <input type="number" class="form-control" placeholder="" asp-for="Capacity" readonly/>
        <span asp-validation-for="Capacity" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label class="form-label"> Address</label>
        <input type="text" class="form-control" placeholder="" asp-for="Address" readonly/>
    </div>

    <div class="mt-3">
        <label class="form-label"> Price/day $</label>
        <input type="number" class="form-control" asp-for="Price" step="0.01" placeholder="" readonly/>
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label class="form-label"> Day - Time Start</label>
        <input type="datetime-local" class="form-control" placeholder="" asp-for="DateStart" />
        <span asp-validation-for="DateStart" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label class="form-label"> Day - Time End</label>
        <input type="datetime-local" class="form-control" placeholder="" asp-for="DateEnd" />
        <span asp-validation-for="DateEnd" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label class="form-label"> Total Price $</label>
        <input type="number" class="form-control" asp-for="Deposit"  placeholder="" readonly />
        <span asp-validation-for="Deposit" class="text-danger"></span>
    </div>

    @Html.ValidationSummary()

    <div class="mt-3">
        <button class=" btn btn-primary" type="submit">Tính Tiền</button>
        @if (@Model.Deposit > 0)
        {
            <button class=" btn btn-primary" type="" formmethod="get" asp-area="" asp-controller="Organizer" asp-action="PaymentVenue"
                    asp-route-VenueID="@Model.VenueId" asp-route-DateStart="@Model.DateStart" asp-route-DateEnd="@Model.DateEnd" asp-route-Deposit="@Model.Deposit">
                Thanh toán
            </button>
        }
        <button class=" btn btn-danger" type="" formmethod="get" asp-area="" asp-controller="Organizer" asp-action="ListVenue">Cancel</button>
    </div>

    <div class="mt-3">
    </div>
</form>
