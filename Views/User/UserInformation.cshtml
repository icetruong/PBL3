@using Microsoft.EntityFrameworkCore.Metadata.Internal
@{
    ViewData["Title"] = "Home Page";
}

@model HoldEvent.Models.Entities.User

<div class="text-center">
    <h1 class="display-4" style="font-weight:700">Thông tin cá nhân</h1>
</div>

<div class="container my-4 d-flex justify-content-center">
    <div class="card shadow-sm" style="max-width: 520px; width: 100%;">
        <div class="card-body">
            @* <h4 class="card-title mb-4 text-center">User Information</h4> *@
            <form asp-area="" asp-controller="user" asp-action="UserInformationPost">
                <input type="hidden" asp-for="UserId" />

                <div class="mb-3">
                    <label asp-for="FullName" class="form-label">Full Name</label>
                    <input type="text" class="form-control" asp-for="FullName" readonly />
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input type="email" class="form-control" asp-for="Email" readonly />
                </div>

                <div class="mb-3">
                    <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                    <input type="text" class="form-control" asp-for="PhoneNumber" readonly />
                </div>

                <div class="mb-3">
                    <label asp-for="Address" class="form-label">Address</label>
                    <input type="text" class="form-control" asp-for="Address" readonly />
                </div>

                <div class="mb-3">
                    <label asp-for="DayOfBirth" class="form-label">Day Of Birth</label>
                    <input type="datetime-local" class="form-control" asp-for="DayOfBirth" readonly />
                </div>

                <fieldset class="mb-3">
                    <legend class="col-form-label pt-0">Gender</legend>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" asp-for="Gender" value="true" />
                        <label class="form-check-label">Nam</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" asp-for="Gender" value="false" />
                        <label class="form-check-label">Nữ</label>
                    </div>
                </fieldset>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary flex-grow-1">OK</button>
                    <button type="submit" formmethod="get" asp-controller="user" asp-action="UserInformationEdit" class="btn btn-secondary flex-grow-1">Edit</button>
                    <button type="submit" formmethod="get" asp-controller="user" asp-action="ChangePassword" class="btn btn-secondary flex-grow-1">Change Password</button>
                </div>
            </form>
        </div>
    </div>
</div>

