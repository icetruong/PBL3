@{
    ViewData["Title"] = "Home Page";
}

 @model List<HoldEvent.Models.Entities.Feedback>
<div class="justify-content-between">
    <div>
        <h1 class="display-4 text-center" style="font-weight:700">List Feedback</h1>
    </div>
    <div class="text-start d-flex justify-content-center align-items-center mt-2">
        <a class="btn btn-primary" asp-area="" asp-controller="User" asp-action="Feedback">Create Feedback</a>
    </div>
</div>


<div class="text-center">
    <br />
    <table class="table table-bordered mt-3">
        <thead class="table-light text-center">
            <tr>
                <th scope="col">Title</th>
                <th scope="col">Day Sent</th>
                <th scope="col" style="width: 100px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var f in Model)
            {
                <tr>
                    <td class="align-middle">@f.Title</td>
                    <td class="align-middle text-center">@f.CreateAtDay</td>
                    <td class="text-center">
                        <a class="btn btn-sm btn-primary" asp-area="" asp-controller="User" asp-action="ViewFeedbackRespond" asp-route-FeedbackID="@f.FeedbackId">View</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>



