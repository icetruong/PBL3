@using Microsoft.EntityFrameworkCore.Metadata.Internal
@{
    ViewData["Title"] = "Home Page";
}

@model HoldEvent.Models.Entities.Feedback

<div class="text-center">
    <h1 class="display-4" >Feedback</h1>
</div>

<form method="post">
    <div class="mt-3">
        <input type="hidden" class="form-control" placeholder="" asp-for="UserId" readonly />
    </div>
    <div class="mt-3">
        <input type="hidden" class="form-control" placeholder="" asp-for="FeedbackId" readonly />
    </div>
    <div class="mt-3">
        <label class="form-label"> Title</label>
        <textarea class="form-control" rows="1" placeholder="Nhập tiêu đề" asp-for="Title"></textarea>
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="mt-3">
        <label class="form-label"> Content</label>
        <textarea class="form-control" rows="5" placeholder="Nhập nội dung chi tiết" asp-for="Content"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <div class="mt-3">
        <input type="datetime-local" hidden class="form-control" placeholder="" asp-for="CreateAtDay" readonly />
    </div>
    <div class="mt-3">
        <input type="hidden" class="form-control" placeholder="" asp-for="FeedbackState" readonly />
    </div>

    <div class="mt-3">
        <button class=" btn btn-primary" type="submit">OK</button>
        <button class=" btn btn-danger" type="" formmethod="get" asp-area="" asp-controller="Home" asp-action="Index">Cancel</button>
    </div>
</form>

