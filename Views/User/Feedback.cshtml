@using Microsoft.EntityFrameworkCore.Metadata.Internal
@{
    ViewData["Title"] = "Home Page";
}

@model HoldEvent.Models.Entities.Feedback

<div class="text-center">
    <h1 class="display-4" style="font-weight:700">Feedback</h1>
</div>

<form method="post" class="card p-4 mx-auto" style="min-width: 1000px; box-shadow: 0 0 12px rgba(0,0,0,0.1); border-radius: 8px; background:#fff;">
    <input type="hidden" asp-for="UserId" readonly />
    <input type="hidden" asp-for="FeedbackId" readonly />
    <input type="hidden" asp-for="CreateAtDay" readonly />
    <input type="hidden" asp-for="FeedbackState" readonly />

    <div class="mb-3">
        <label asp-for="Title" class="form-label">Title</label>
        <textarea class="form-control" rows="1" placeholder="Nhập tiêu đề" asp-for="Title"></textarea>
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Content" class="form-label">Content</label>
        <textarea class="form-control" rows="5" placeholder="Nhập nội dung chi tiết" asp-for="Content"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <div class="d-flex justify-content-between gap-2">
        <button type="submit" class="btn btn-primary flex-fill">OK</button>
        <button type="button" class="btn btn-danger flex-fill" onclick="location.href='@Url.Action("Index", "Home")'">Cancel</button>
    </div>
</form>


