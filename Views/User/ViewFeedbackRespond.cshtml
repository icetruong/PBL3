@using Microsoft.EntityFrameworkCore.Metadata.Internal
@{
    ViewData["Title"] = "Home Page";
}

@model HoldEvent.Models.FeedbackSupportViewModel


<div class="text-center">
    <h1 class="display-4" > Your FeedBack</h1>
</div>

<div>
    <div class="mt-3">
        <input type="hidden" class="form-control" placeholder="" asp-for="UserId" readonly />
    </div>
    <div class="mt-3">
        <input type="hidden" class="form-control" placeholder="" asp-for="FeedbackId" readonly />
    </div>
    <div class="mt-3">
        <input type="hidden" class="form-control" placeholder="" asp-for="AdminId" readonly />
    </div>
    <div class="mt-3">
        <input type="hidden" class="form-control" placeholder="" asp-for="SupportId" readonly />
    </div>
    <div class="mt-3">
        <label class="form-label"> Title</label>
        <textarea class="form-control" rows="1" placeholder="Nhập tiêu đề" asp-for="Title"></textarea>
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="mt-3">
        <label class="form-label"> Content Feedback</label>
        <textarea class="form-control" rows="5" placeholder="" asp-for="ContentFeedback" readonly></textarea>
    </div>
    <div class="mt-3">
        <label class="form-label"> Day Feedback</label>
        <input type="datetime-local" class="form-control" placeholder="" asp-for="CreateAtDayFeedback" readonly />
    </div>
</div>

@if(Model.SupportId != null)
{
    <div class="text-center">
        <h1 class="display-4"> Respond for you</h1>
    </div>

    <div>
        <div class="mt-3">
            <label class="form-label"> Content Support</label>
            <textarea class="form-control" rows="5" placeholder="" asp-for="ContentSupport" readonly></textarea>
            <span asp-validation-for="ContentSupport" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <label class="form-label"> Day Feedback</label>
            <input type="datetime-local" class="form-control" placeholder="" asp-for="CreateAtDayFeedback" readonly />
        </div>
    </div>
}

<div>
    <div class="mt-3">
        <a class="btn btn-primary" asp-area="" asp-controller="User" asp-action="ListFeedback">OK</a>
    </div>
</div>




